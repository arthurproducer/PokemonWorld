<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_charizard"
        tools:context=".view.login.LoginActivity">

    <ImageView
            android:alpha="0.9"
            android:layout_width="0dp"
            android:layout_height="120dp" app:srcCompat="@drawable/logo_pokemon"
            android:contentDescription="@string/app_name"
            android:id="@+id/imgLogoPokemon"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:id="@+id/cardViewLogin"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp"
            android:background="@color/colorEditTextDefault"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgLogoPokemon"
            app:layout_constraintBottom_toTopOf="@+id/registerLink">

        <include layout="@layout/custom_login"
                 android:id="@+id/custom_login"
        />

    </com.google.android.material.card.MaterialCardView>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/registerLink"
            android:text="@string/register_link"
            android:background="@drawable/background_button_secundary"
            android:textColor="@color/colorTextSecundary"
            android:fontFamily="sans-serif-black"
            android:visibility="invisible"
            android:elevation="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>