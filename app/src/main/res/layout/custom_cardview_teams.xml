<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="13dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true" android:id="@+id/materialCardView">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constraintLayout"
            android:padding="0dp">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTeamPokemon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTeamName"
                tools:itemCount="6"
                tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/item_pokemon_teams"
                tools:spanCount="3" />

        <TextView
                android:id="@+id/txtTier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/pokemon_solid"
                android:text="Tier"
                android:textColor="@color/mainSubTitleColor"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/rvTeamPokemon"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/txtTeamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pokemon_solid"
                android:text="Time usado pokemon yellow"
                android:textColor="@color/mainLogoColor"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/txtTier"
                app:layout_constraintStart_toEndOf="@+id/shortcutCardView"
                app:layout_constraintTop_toTopOf="@+id/txtTier" />

        <androidx.cardview.widget.CardView
                android:id="@+id/shortcutCardView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="true"
                app:layout_constraintStart_toStartOf="@+id/rvTeamPokemon"
                app:layout_constraintTop_toTopOf="parent">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/alphalogo" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>