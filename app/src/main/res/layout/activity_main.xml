<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_charizard">

    <ImageView
            android:alpha="0.9"
            android:layout_width="0dp"
            android:layout_height="120dp" app:srcCompat="@drawable/logo_pokemon"
            android:contentDescription="@string/app_name"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <Button
            style="@style/custom_button"
            android:textColor="#673AB7"
            android:text="VER TODOS POKÉMONS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:id="@+id/btPokemonList"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintBottom_toTopOf="@+id/btClose"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.334"/>
    <Button
            style="@style/custom_button"
            android:textColor="#673AB7"
            android:text="MEUS POKEMONS FAVORITOS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btFavorites"
            app:layout_constraintEnd_toEndOf="@+id/btClose"
            app:layout_constraintStart_toStartOf="@+id/btClose"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btPokemonList"
    />

    <Button
            style="@style/custom_button"
            android:textColor="#673AB7"
            android:text="SAIR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btClose"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btFavorites"
            app:layout_constraintEnd_toEndOf="@+id/btPokemonList"
            app:layout_constraintStart_toStartOf="@+id/btPokemonList"/>
     <TextView
            android:gravity="center"
            android:textColor="#FFF"
            android:text="DESENVOLVIDO POR ARTHUR SALES\nPara o Itaú"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="71dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            android:orientation="horizontal" app:layout_constraintGuide_percent="0.27"/>
</androidx.constraintlayout.widget.ConstraintLayout>