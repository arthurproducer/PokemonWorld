<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
            android:id="@+id/imgBackThird"
            android:layout_width="363dp"
            android:layout_height="110dp"
            android:background="@drawable/background_rank_top"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/imgForeThird"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/foreground_rank_top"
            app:layout_constraintEnd_toEndOf="@id/imgBackThird"
            app:layout_constraintTop_toTopOf="@+id/imgBackThird" />

    <ImageView
            android:id="@+id/imgThirdPoke"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:alpha="0.9"
            app:layout_constraintEnd_toEndOf="@+id/imgBackThird"
            app:layout_constraintTop_toTopOf="@+id/imgBackThird"
            app:srcCompat="@drawable/jirachi385" />

    <TextView
            android:id="@+id/txtThirdNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="#3"
            android:textColor="@color/colorAccent"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imgBackThird"
            app:layout_constraintTop_toTopOf="@+id/imgBackThird" />

    <TextView
            android:id="@+id/txtThirdName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Jirachi"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/txtThirdNumber"
            app:layout_constraintTop_toTopOf="@+id/txtThirdNumber" />

    <TextView
            android:id="@+id/txtThirdUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="53.90513%"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/txtThirdName"
            app:layout_constraintStart_toStartOf="@+id/txtThirdName"
            app:layout_constraintTop_toBottomOf="@+id/txtThirdName" />

</androidx.constraintlayout.widget.ConstraintLayout>