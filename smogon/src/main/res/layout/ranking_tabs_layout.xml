<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/previous_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="selecionar mês anterior"
            android:src="@drawable/ic_arrow_left"
            android:gravity="center"
            android:padding="16dp"
            app:layout_constraintEnd_toStartOf="@+id/previous_tab_layout"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.Group
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/previous_tab_group"
            app:constraint_referenced_ids="previous_tab_layout,previous_tab_month,previous_tab_status" />

    <View
            android:id="@+id/previous_tab_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/selected_tab_layout"
            app:layout_constraintStart_toEndOf="@+id/previous_button"
            app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
            android:id="@+id/previous_tab_month"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="12sp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toTopOf="@+id/previous_tab_status"
            app:layout_constraintEnd_toEndOf="@+id/previous_tab_layout"
            app:layout_constraintStart_toStartOf="@id/previous_tab_layout"
            app:layout_constraintTop_toTopOf="@id/previous_tab_layout"
            app:layout_constraintVertical_chainStyle="packed"
            android:text="novembro"
        />

    <TextView
            android:id="@+id/previous_tab_status"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textSize="12sp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="@+id/previous_tab_layout"
            app:layout_constraintEnd_toEndOf="@+id/previous_tab_layout"
            app:layout_constraintStart_toStartOf="@id/previous_tab_layout"
            app:layout_constraintTop_toBottomOf="@id/previous_tab_month"
            android:text="paga"
        />

    <View
            android:id="@+id/selected_tab_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/next_tab_layout"
            app:layout_constraintStart_toEndOf="@+id/previous_tab_layout"
            app:layout_constraintTop_toTopOf="parent"
            />

    <TextView
            android:id="@+id/selected_tab_month"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toTopOf="@+id/selected_tab_status"
            app:layout_constraintEnd_toEndOf="@+id/selected_tab_layout"
            app:layout_constraintStart_toStartOf="@+id/selected_tab_layout"
            app:layout_constraintTop_toTopOf="@+id/selected_tab_layout"
            app:layout_constraintVertical_chainStyle="packed"
            android:text="dezembro"
            />

    <TextView
            android:id="@+id/selected_tab_status"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textSize="12sp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="@+id/selected_tab_layout"
            app:layout_constraintEnd_toEndOf="@+id/selected_tab_layout"
            app:layout_constraintStart_toStartOf="@id/selected_tab_layout"
            app:layout_constraintTop_toBottomOf="@id/previous_tab_month"
            android:text="fechada"
            />

    <androidx.constraintlayout.widget.Group
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_tab_group"
            app:constraint_referenced_ids="next_tab_layout,next_tab_month,next_tab_status" />

    <View
            android:id="@+id/next_tab_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/next_button"
            app:layout_constraintStart_toEndOf="@+id/selected_tab_layout"
            app:layout_constraintTop_toTopOf="parent"
            />

    <TextView
            android:id="@+id/next_tab_month"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="12sp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toTopOf="@+id/next_tab_status"
            app:layout_constraintEnd_toEndOf="@+id/next_tab_layout"
            app:layout_constraintStart_toStartOf="@id/next_tab_layout"
            app:layout_constraintTop_toTopOf="@id/next_tab_layout"
            app:layout_constraintVertical_chainStyle="packed"
            android:text="janeiro"
            />

    <TextView
            android:id="@+id/next_tab_status"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textSize="12sp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="@+id/next_tab_layout"
            app:layout_constraintEnd_toEndOf="@+id/next_tab_layout"
            app:layout_constraintStart_toStartOf="@id/next_tab_layout"
            app:layout_constraintTop_toBottomOf="@id/next_tab_month"
            android:text="aberta"
            />

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/next_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="selecionar mês seguinte"
            android:gravity="center"
            android:padding="16dp"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/next_tab_layout" />

    <View
        android:id="@+id/separator"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    <View
        android:id="@+id/selected_tab_status_color"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/separator"
            app:layout_constraintEnd_toEndOf="@+id/selected_tab_layout"
            app:layout_constraintStart_toStartOf="@+id/selected_tab_layout"
            android:background="@color/colorAccent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>